<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/white" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="40dip"
            android:orientation="vertical" >

            <!-- 提示内容 -->

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="40dip"
                android:layout_marginTop="5dip"
                android:background="@drawable/id_login_bg_2"
                android:gravity="center_vertical" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dip"
                    android:src="@drawable/id_login_tip" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dip"
                    android:text="@string/is_login_notice"
                    android:textColor="@color/black_slight" />

                <TextView
                    android:id="@+id/ii_login"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:autoLink="web"
                    android:text="@string/is_login_notice2"
                    android:textColor="@color/blue" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/id_login_bg_1"
                android:gravity="center_vertical"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dip" >

                    <TextView
                        android:layout_width="70dip"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="15dip"
                        android:gravity="right"
                        android:text="@string/is_cellphone_num"
                        android:textColor="@color/black_slight" />

                    <EditText
                        android:id="@+id/ii_regist_phone"
                        android:layout_width="180dip"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dip"
                        android:inputType="number"
                        android:singleLine="true" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dip" >

                    <TextView
                        android:layout_width="70dip"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="15dip"
                        android:gravity="right"
                        android:text="@string/is_login_password"
                        android:textColor="@color/black_slight" />

                    <EditText
                        android:id="@+id/ii_regist_password"
                        android:layout_width="180dip"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dip"
                        android:hint="@string/is_regist_password_hint"
                        android:password="true"
                        android:singleLine="true" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dip" >

                    <TextView
                        android:layout_width="70dip"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="15dip"
                        android:gravity="right"
                        android:inputType="number"
                        android:text="@string/is_regist_re_password"
                        android:textColor="@color/black_slight" />

                    <EditText
                        android:id="@+id/ii_regist_repassword"
                        android:layout_width="180dip"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dip"
                        android:hint="@string/is_regist_repassword_hint"
                        android:password="true"
                        android:singleLine="true" />
                </LinearLayout>

                <Button
                    android:id="@+id/ii_regist"
                    android:layout_width="180dip"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="1dip"
                    android:text="@string/is_regist" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" >

                    <CheckBox
                        android:id="@+id/ii_regist_protocol_check"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dip" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dip"
                        android:text="@string/is_regist_notice1"
                        android:textColor="@color/black_slight" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:autoLink="web"
                        android:text="@string/is_regist_notice2"
                        android:textColor="@color/blue" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/is_regist_notice3"
                        android:textColor="@color/black_slight" />
                </LinearLayout>
                <!-- 友好提示 -->

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/is_regist_notice4" />
            </LinearLayout>
            <!-- 客服电话 -->

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dip"
                android:background="@drawable/id_login_bg_1"
                android:gravity="center_vertical" >

                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/id_login_tel" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>